{
    "suggest.noselect": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "c",
        "cpp",
        "vim",
        "rust",
        "typescript",
        "html",
        "js",
        "ruby"
    ],
    "coc.preferences.promptInput": true,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.bracketEnterImprove": true,

    "highlight.colorNames.enable": false,
    "highlight.document.enable": false,

    "emmet.excludeLanguages": [
        "eruby"
    ],

    "solargraph.formatting": true,
    "solargraph.autoformat": true,
    "solargraph.diagnostics": true,

    "rust-analyzer.cargo.allFeatures": true,

    "eslint.run": "onType",
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "markdown"
    ],
    "eslint.autoFixOnSave": true,
    "eslint.format.enable": true,
    "eslint.codeActionsOnSave.mode": "all",
    "eslint.alwaysShowStatus": true,
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.codeAction.disableRuleComment": {
        "enable": true,
        "location": "separateLine"
    },
    "eslint.workingDirectories": ["."],

    "snippets.ultisnips.directories": [
        "UltiSnips",
        "UnitySnippets"
    ],

    "coc.source.OmniSharp.enable": true,
    "coc.source.OmniSharp.triggerCharacters": [
        "."
    ]
}
